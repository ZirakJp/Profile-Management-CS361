# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

DJANGO_SETTINGS_MODULE=ProjectConfig.settings

# Database settings (default is SQLite; update if using Postgres or MySQL)
DATABASE_URL=sqlite:///db.sqlite3
# For Postgres:
# DATABASE_URL=postgres://username:password@localhost:5432/dbname

# Media files
MEDIA_URL=/media/
MEDIA_ROOT=media

# JWT Authentication (if integrating with auth microservice)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional: Email settings for notifications or password reset
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

IMAGE_SERVICE_URL=http://localhost:5001
